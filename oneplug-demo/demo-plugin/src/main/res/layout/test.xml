<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="activity_Button" />

            <Button
                android:id="@+id/list_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ListActivity_Button" />

            <Button
                android:id="@+id/preference_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PreferenceActivity_Button" />

            <Button
                android:id="@+id/fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fragment_and_FragmentAcctivityButton" />

            <!--<Button-->
                <!--android:id="@+id/fragment_activity"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="FragmentActivity_Button" />-->

            <Button
                android:id="@+id/tab_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAB_ACTIVITY"/>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>